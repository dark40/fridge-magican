<link rel="stylesheet" href="/css/home.css" />

<h1>Home page</h1>

<section class="container">
    <div class="search">
        <input
            type="text"
            id="searchText"
            placeholder="Search Recipes"
            autofocus
        />
        <button class="btn">Find</button>
    </div>
</section>

<div id="recipe-container">
    {{#each userRecipeClean as |recipe|}}
        <div class="recipe">
            <div class="recipe-title">{{recipe.name}}</div>
            <div class="recipe-image">
                <img src="{{recipe.image}}" alt="Recipe">
            </div>
            <div class="recipe-text">
                <ul>
                    <li>
                        {{recipe.time}}
                    </li>
                    <li>
                        {{recipe.difficulty}}
                    </li>
                </ul>
            </div>
        </div>   
    {{/each}} 
</div>

<div id = "fridge-container">
    <h2>My Fridge</h2>
    <div class = "fridge">
        <ul>
        {{#each userFridgeClean.fridge.stocks as |ingredient|}}
            <li>{{ingredient.name}}</li>
        {{/each}}
        </ul>
    </div>
</div>

<p>{{posts}}</p>

{{#if user_id}}
<a href="/fridge/{{user_id}}">Test</a>
{{else}}
<a href="/login">Test</a>
{{/if}}

<script src="/js/home.js"></script>